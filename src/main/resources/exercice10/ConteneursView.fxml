<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" >
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="New"/>
                    <MenuItem text="Open"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Save"/>
                    <MenuItem text="Close"/>
                </Menu>
                <Menu text="Edit">
                    <MenuItem text="Cut"/>
                    <MenuItem text="Copy"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Paste"/>
                </Menu>
                <Menu text="Help"/>
            </MenuBar>
            <Separator/>
        </VBox>
    </top>

    <left>
        <HBox>
            <VBox spacing="10.0" >
                <Label text="Boutons :"/>
                <Button text="Bouton 1"/>
                <Button text="Bouton 2"/>
                <Button text="Bouton 3"/>
            </VBox>
            <Separator orientation="VERTICAL"/>
        </HBox>
    </left>

    <center>
        <GridPane hgap="10.0" vgap="10.0" >
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <HBox spacing="10.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <Button text="Submit"/>
                <Button text="Cancel"/>
            </HBox>
        </GridPane>
    </center>

    <bottom>
        <VBox alignment="BOTTOM_CENTER" >
            <Separator/>
            <Label text="Ceci est un label de bas de page"/>
        </VBox>
    </bottom>
</BorderPane>
